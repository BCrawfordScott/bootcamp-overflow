extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/users' method='post')
        input(type='hidden' name='_csrf' value=`${csrfToken}`)
        +field('Email Address', 'emailAddress', user.emailAddress, 'email')
        +field('Username', 'username', user.username)
        +field('Password', 'password', user.password, 'password')
        +field('Confirm Password', 'confirmPassword', '', 'password')
        div(class='py-4')
            button(type='submit' class='btn btn-primary') Register
            a(href='/' class='btn btn-warning ml-2') Cancel
        div
            p: a(href='/login') Already have an account?